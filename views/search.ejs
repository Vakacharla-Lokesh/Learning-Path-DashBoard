    <title><h3>Learning path</h3></title>
    <style>
        header{
            position: fixed;
            top: 0px;
        }
        body {
            font-family: Arial, sans-serif;
            background-color:#d3d6f2;
            color:black;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        .logo {
            margin-bottom: 20px;
            font-weight: 400;
            font-size: 50px;
            color:black;
        }
        .search-bar {
            display: flex;
            align-items: center;
            background-color: #ffffff;
            border-radius: 24px;
            padding: 6px 14px;
            width: 560px;
            max-width: 90%;
        }
        .search-bar input {
            flex-grow: 1;
            background: none;
            border: none;
            color: #e8eaed;
            font-size: 16px;
            outline: none;
            padding: 10px;
        }
        .search-icon, .mic-icon, .lens-icon {
           /* color: #9aa0a6; */
            font-size: 20px;
            padding: 0 8px;
            margin-left: 20px;
        }
        .shortcuts {
            display: flex;
            margin-right: 20px;
            margin-left: 20px;
            justify-content: center;
            margin-top: 50px;
        }
        .shortcut {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 10px;
            text-decoration: none;
            color: black;
            font-size: 25px;
            font-weight: bold;
        }
        .shortcut-icon {
            margin-left: 20px;
            margin-right: 30px;
            width: 48px;
            height: 48px;
           
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }
        .add-shortcut {
            background-color: rgba(255, 255, 255, 0.1);
        }
    </style>
